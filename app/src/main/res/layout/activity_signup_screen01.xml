<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shussain.zeenmoi.SignUpScreen01">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.2"
        app:srcCompat="@drawable/zeenmoilogo"
        android:layout_above="@+id/txtPhone"
        android:layout_alignLeft="@+id/txtNickName"
        android:layout_alignStart="@+id/txtNickName"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light"
        android:text="User Profile"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/imgBtnMan"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="41dp"
        app:srcCompat="@drawable/man"
        android:background="@drawable/image_button_rounded"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtFirstName"
        android:layout_toStartOf="@+id/txtFirstName"/>

    <ImageButton
        android:id="@+id/imgBtnWoman"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/women"
        android:background="@drawable/image_button_rounded"
        android:layout_alignTop="@+id/imgBtnMan"
        android:layout_alignRight="@+id/txtPhone"
        android:layout_alignEnd="@+id/txtPhone"/>

    <EditText
        android:id="@+id/txtFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignTop="@+id/imgUserProfile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/txtLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/imgUserProfile"
        android:layout_alignLeft="@+id/txtFirstName"
        android:layout_alignStart="@+id/txtFirstName"/>

    <EditText
        android:id="@+id/txtNickName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="Do you have a nick name?"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgEmail"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imgEmail"
        android:layout_toRightOf="@+id/imgEmail"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:layout_below="@+id/imgPhone"
        android:layout_toRightOf="@+id/imgPhone"
        android:layout_toEndOf="@+id/imgPhone"/>

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_alignTop="@+id/imgPhone"
        android:background="@drawable/textview_borders"
        android:ems="10"
        android:hint="Phone"
        android:inputType="textPersonName"/>

    <ImageView
        android:id="@+id/imgUserProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/choupi"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/imgBtnMan"
        android:layout_toLeftOf="@+id/txtFirstName"
        android:layout_toStartOf="@+id/txtFirstName"/>

    <ImageView
        android:id="@+id/imgEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/email"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtNickName"
        android:layout_toLeftOf="@+id/imgBtnMan"
        android:layout_toStartOf="@+id/imgBtnMan"/>

    <ImageView
        android:id="@+id/imgPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/phone"
        android:layout_below="@+id/imgEmail"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/imgEmail"
        android:layout_alignStart="@+id/imgEmail"
        android:layout_toLeftOf="@+id/txtEmail"
        android:layout_toStartOf="@+id/txtEmail"/>

    <Button
        android:id="@+id/btnFinalStep"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/button_rounded"
        android:elevation="0dp"
        android:text="Final Step >>"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
