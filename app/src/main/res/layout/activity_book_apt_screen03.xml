<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shussain.zeenmoi.BookAptScreen03">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0.2"
        app:srcCompat="@drawable/zeenmoilogo"/>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Which service(s) do you need?"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manicure"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_above="@+id/ckBoxSimpleManucure"
        android:layout_alignRight="@+id/checkBox4"
        android:layout_alignEnd="@+id/checkBox4"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView30"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignRight="@+id/imageView11"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Pedicure"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/ckBoxSimpleManucure"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:duplicateParentState="false"
        android:text="Simple Manicure"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignLeft="@+id/textView28"
        android:layout_alignStart="@+id/textView28"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="13dp"
        android:text="Manicure + Nail polish"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/ckBoxSimpleManucure"
        android:layout_alignLeft="@+id/ckBoxSimpleManucure"
        android:layout_alignStart="@+id/ckBoxSimpleManucure"/>

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Manicure + Gel"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"/>

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Other Manicure Service"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"/>

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/checkBox3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Simple Pedicure"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Others"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_above="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6"/>

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7"
        android:layout_alignTop="@+id/checkBox4"
        android:text="Others"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/checkBox9"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/checkBox8"
        android:layout_alignStart="@+id/checkBox8"
        android:layout_alignTop="@+id/checkBox5"
        android:text="Others"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/priceSpinner"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"/>

    <Button
        android:id="@+id/btnSetLocation"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/button_rounded"
        android:elevation="0dp"
        android:text="Set Location"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:text="Select a budget:"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="20sp"/>

</RelativeLayout>
